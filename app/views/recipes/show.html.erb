<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @recipe %>" class="flex flex-col justify-center text-center">
  <h2 class="text-xl font-semibold text-blue-950 mb-4">
    <%= @recipe.title %>
  </h2>

  <div class="flex justify-center">
    <img 
      src="<%= @recipe.image.attached? ? url_for(@recipe.image) : image_path('recipes/default.jpeg') %>"
      alt="image"
      class="w-5/12 rounded-lg shadow-lg shadow-blue-950"
    />
  </div>

  <p class="mt-6">
    <%= @recipe.description %>
  </p>
</div>

