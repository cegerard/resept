<div id="<%= dom_id recipe %>">
  <p>
    <strong>Title:</strong>
    <%= recipe.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>
  </p>

  <p>
    <strong>Heating time:</strong>
    <%= recipe.heating_time %>
  </p>

  <p>
    <strong>Difficulty level:</strong>
    <%= recipe.difficulty_level %>
  </p>

</div>
